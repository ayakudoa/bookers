<% if flash[:notice] %>
<p id="notice">
  <%= flash[:notice] %>
</p>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<div class="field">
<label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
<label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>

<div class="field">
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<table>
<tr>
<td><%= link_to "show", book_path(@book.id) %></td>
<td><p>|</p></td>
<td><%= link_to "Back", books_path(@book.id) %></td>
</tr>
</table>